{
  "compilerOptions": {
    "target": "es2018",
    "lib": [ "es2018", "dom" ],
    "removeComments": true,
    "skipLibCheck": true,

    // Module resolution
    "module": "es2015",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",

    // Type definitions
    "declaration": true,
    "declarationDir": "types/"
  },
  "exclude": [
    "dist/",
    "types/",
    "**/*.test.ts",
    "jest.startup.ts"
  ]
}
